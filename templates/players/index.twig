{% extends "_layout" %}
{% set title = "Players" %}


{% block content %}
  <h1 class="text-5xl text-center">Players</h1>

  <ul class="grid grid-cols-2 sm:grid-cols-4 gap-4">
    {% for player in craft.entries.section('players').all() %}
      <li class="text-center underline">{{ player.link }}</li>
    {% endfor %}
  </ul>
{% endblock %}
